  notifications_enabled <%= n['notifications'] %>
  <% unless n["notification_period"].nil? -%>
  notification_period <%= n['notification_period'] %>
  <% end -%>
  <% unless n["contact_groups"].nil? -%>
  contact_groups <%= n['contact_groups'] %>
  <% end -%>
}
<% end -%>
<% end -%>
