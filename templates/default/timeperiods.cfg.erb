# Time period definitions
# Automatically generated by Chef

define timeperiod {
  timeperiod_name 24x7
  alias           24 Hours A Day, 7 Days A Week
  sunday          00:00-24:00
  monday          00:00-24:00
  tuesday         00:00-24:00
  wednesday       00:00-24:00
  thursday        00:00-24:00
  friday          00:00-24:00
  saturday        00:00-24:00
}

<% @timeperiods.each do |timeperiod| -%>
define timeperiod {
  timeperiod_name <%= timeperiod['id'] %>
  alias           <%= timeperiod['description'] %>
  <% unless timeperiod['sunday'].nil? -%>
  sunday          <%= timeperiod['sunday'] %>
  <% end -%>
  <% unless timeperiod['monday'].nil? -%>
  monday          <%= timeperiod['monday'] %>
  <% end -%>
  <% unless timeperiod['tuesday'].nil? -%>
  tuesday          <%= timeperiod['tuesday'] %>
  <% end -%>
  <% unless timeperiod['wednesday'].nil? -%>
  wednesday          <%= timeperiod['wednesday'] %>
  <% end -%>
  <% unless timeperiod['thursday'].nil? -%>
  thursday          <%= timeperiod['thursday'] %>
  <% end -%>
  <% unless timeperiod['friday'].nil? -%>
  friday          <%= timeperiod['friday'] %>
  <% end -%>
  <% unless timeperiod['saturday'].nil? -%>
  saturday          <%= timeperiod['saturday'] %>
  <% end -%>
}

<% end -%>