# Xinetd config for MK Livestatus
# Automatically generated by Chef

service livestatus
{
  type = UNLISTED
  port = 6557
  socket_type = stream
  protocol = tcp
  wait = no
  cps = 100 3
  instances = 500
  per_source = 250
  flags = NODELAY
  user = nagios
  server = /usr/bin/unixcat
  server_args = /var/lib/nagios3/rw/live
  only_from = <%= @splunk_host.join(' ') %>
  disable = no
}