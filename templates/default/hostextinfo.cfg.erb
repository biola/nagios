# Extended host information definitions
# Automatically generated by Chef

<% @hosts.each do |host| -%>
define hostextinfo {
  host_name <%= node['nagios']['server']['normalize_hostname'] ? host.name.downcase : host.name %>
  icon_image <%= host.platform %>.png
  statusmap_image <%= host.platform %>.gd2
}

<% end -%>

<% @unmanaged_hosts.each do |unmanaged_host| -%>
<% if unmanaged_host['platform'] -%>
define hostextinfo {
  host_name <%= node['nagios']['server']['normalize_hostname'] ? unmanaged_host['host_name'].downcase : unmanaged_host['host_name'] %>
  icon_image <%= unmanaged_host['platform'] %>.png
  statusmap_image <%= unmanaged_host['platform'] %>.gd2
}

<% end -%>
<% end -%>