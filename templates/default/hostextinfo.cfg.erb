# Extended host information definitions
# Automatically generated by Chef

<% @hosts.each do |host| -%>
define hostextinfo {
  host_name <%= node['nagios']['server']['normalize_hostname'] ? host.name.downcase : host.name %>
  icon_image <%= host.platform %>.png
  statusmap_image <%= host.platform %>.gd2
}

<% end -%>

<% @unmanaged_hosts.each do |host| -%>
<% unless host["platform"].nil? -%>
define hostextinfo {
  host_name <%= node['nagios']['server']['normalize_hostname'] ? host['host_name'].downcase : host['host_name'] %>
  icon_image <%= host["platform"] %>.png
  statusmap_image <%= host["platform"] %>.gd2
}

<% end -%>
<% end -%>